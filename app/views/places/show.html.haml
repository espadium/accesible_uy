%h1= "Informacion extendida acerca de #{@place.name}"

= link_to 'Volver a la pagina anterior', :back, class: 'btn'
= link_to 'Volver al inicio', :root, class: 'btn'

.row
  .col-md-8
    .col-md-12
      .panel.panel-primary
        .panel-heading
          .panel-title
            = @place.name
        .panel-body
          %p= @place.description
          %p= @place.address.literal
          %p= @place.accessibilities.map(&:name).join(',')
          %p= @place.tel
          %p= link_to @place.link, build_outside_url(@place.link) if @place.link
  .col-md-4
    = render 'partials/map', markers: [[@place.address.lat, @place.address.long]]
