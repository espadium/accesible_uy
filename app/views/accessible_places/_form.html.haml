= form_for(accessible_place) do |f|
  - if accessible_place.errors.any?
    #error_explanation
      %h2
        = pluralize(accessible_place.errors.count, "error")
        prohibited this accessible_place from being saved:
      %ul
        - accessible_place.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :accessibility_type
    %br/
    = f.text_field :accessibility_type
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :extra_info
    %br/
    = f.text_area :extra_info
  .actions
    = f.submit
