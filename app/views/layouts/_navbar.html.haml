.navbar.navbar-inverse.navbar-fixed-top
  .container
    .navbar-header
      %button.navbar-toggle{ type: 'button', data_toggle: 'collapse', data_target: '.navbar-collapse' }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %ai{ href: '#' }
      = link_to :root, class: 'navbar-brand' do
        UruguayAccesible
    %div.collapse.navbar-collapse
      %ul.nav.navbar-nav
        %li{ class: "#{ 'active' if current_page?(root_path) }" }
          = link_to 'Inicio', :root
        %li
          // Leave this close to the top for
          // people using screenreaders
          = link_to 'Ir al Contenido', '#content'
        %li{ class: "#{ 'active' if current_page?(places_path) }" }
          = link_to 'Lugares', places_path
