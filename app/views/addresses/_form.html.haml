= form_for(address) do |f|
  - if address.errors.any?
    #error_explanation
      %h2
        = pluralize(address.errors.count, "error")
        prohibited this address from being saved:
      %ul
        - address.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :lat
    %br/
    = f.text_field :lat
  .field
    = f.label :lon
    %br/
    = f.text_field :lon
  .field
    = f.label :literal
    %br/
    = f.text_field :literal
  .field
    = f.label :street_name
    %br/
    = f.text_field :street_name
  .field
    = f.label :street_number
    %br/
    = f.text_field :street_number
  .field
    = f.label :corner_street_name
    %br/
    = f.text_field :corner_street_name
  .actions
    = f.submit
